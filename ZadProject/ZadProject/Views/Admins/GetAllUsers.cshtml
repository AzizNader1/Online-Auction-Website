@model IEnumerable<User>
@{
    Layout = "_AdminLayout";
}

@if (TempData["ActionResult"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline text-center text-xl">@TempData["ActionResult"]</span>
    </div>
}

<div class="flex-grow p-8">
    <h1 class="text-4xl font-bold mb-6">All Users</h1>
    @if (Model.Count() == 0)
    {
        <h4 style="display:flex;justify-content:center;align-items:center;font-size:25px;">There are no users available yet</h4>
    }
    else
    {
        <div class="flex flex-wrap -mx-4">
            @foreach (var item in Model)
            {
                <div class="w-full md:w-1/3 px-4 mb-8">
                    <div class="auction-card bg-white p-6 rounded shadow-lg flex flex-col justify-between h-full transition duration-300 ease-in-out transform hover:scale-105">
                        <div>
                            <p class="font-bold">User Name: <span class="font-normal">@item.UserName</span></p>
                            <p class="font-bold">User Email: <span class="font-normal">@item.UserEmail</span></p>
                            <p class="font-bold">User Address: <span class="font-normal">@item.UserAddress</span></p>
                        </div>
                        <a href="/Admins/UserDetails/@item.UserId" class="bg-blue-500 text-white p-3 rounded mt-4 transition duration-300 ease-in-out transform hover:scale-105 hover:bg-blue-400">Details</a>
                    </div>
                </div>
            }
        </div>
    }
</div>
