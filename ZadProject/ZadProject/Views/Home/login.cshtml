@model LogingUserDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="~/css/loginandsignupdesign.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="form-container">
            <form method="post" enctype="multipart/form-data" asp-action="Login" asp-controller="Home">
                @if (TempData["LoginError"] != null)
                {
                    <p style="color:red">@TempData["LoginError"]</p>
                }
                <input type="text" placeholder="type your user e-mail" name="useremail" required />
                <span asp-validation-for="UserEmail" style="color:red"></span>
                <input type="password" placeholder="type your Password" name="userpassword" required minlength="6" />
                <span asp-validation-for="UserPassword" style="color:red"></span>
                <button type="submit">Sign In</button>
                <p>Don't have an account? <a href="~/Home/SignUp">SignUp</a></p>
            </form>
            <a href="/Home/HomePage" class="btn btn-primary">Back to home</a>
        </div>
        <div class="info-container">
            <h1>Welcome to ZAD Auction</h1>
        </div>
    </div>
</body>
</html>
