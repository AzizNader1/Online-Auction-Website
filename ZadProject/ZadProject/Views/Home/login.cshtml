@model LogingUserDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="~/css/loginandsignupdesign.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
</head>
<body>
    <div class="container">
        <div class="form-container">

            <h1 class="soso ">Login</h1>

            <div class="sodo">
                <a class="btn btn-outline-black btn-social" href=""><i class="fab fa-twitter"></i></a>
                <a class="btn btn-outline-black btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                <a class="btn btn-outline-black btn-social" href=""><i class="fab fa-youtube"></i></a>
                <a class="btn btn-outline-black btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
            </div>
            <pre>
           </pre>
            <form method="post" enctype="multipart/form-data" asp-action="Login" asp-controller="Home">
                @if (TempData["LoginError"] != null)
                {
                    <p style="color:red">@TempData["LoginError"]</p>
                }
                <input type="text" placeholder="User e-mail" name="useremail" required />
                <span asp-validation-for="UserEmail" style="color:red"></span>
                <input type="password" placeholder="Password" name="userpassword" required minlength="6" />
                <span asp-validation-for="UserPassword" style="color:red"></span>
                <button type="submit">Sign In</button>
                <p>Don't have an account? <a href="~/Home/SignUp">SignUp</a></p>
            </form>
            @*             <a href="/Home/HomePage" class="btn btn-primary">Back to home</a>
            *@
        </div>
        <div class="info-container">
            <h1>Welcome to ZAD Auction</h1>
        </div>
    </div>
</body>
</html>
