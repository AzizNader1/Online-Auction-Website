    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .gogo {
            display: block;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
            border-radius: 40px;
            margin-bottom: 20px;
            border-top: 3px solid #010912;
            border-bottom: 3px solid #010912;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
            max-width: 1400px;
            margin: 0 auto;
            justify-content: center;
            align-items: center;
        }

        .card-container > .card-item {
            flex: 1 1 400px;
            max-width: 400px;
            height: auto;
        }

        .card-container:only-child > .card-item,
        .card-container > .card-item:nth-last-child(2):first-child,
        .card-container > .card-item:nth-last-child(1):first-child {
            width: 400px;
            height: auto;
        }

        .card-item {
            background-color: #ffffff;
            border: 1px solid #0d6efd;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
            text-align: center;
            opacity: 0;
            transform: translateY(20px);
        }

        .card-item.visible {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 1s ease, transform 1s ease;
        }

        .card-item:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-color:#0d6efd;
        }

        .card-item img {
            width: 100%;
            max-width: 400px;
            height: 250px;
            border-radius: 10px;
            object-fit: cover;
        }

        .card-item p, .card-item h2{
            display: flex;
            justify-content: space-between;
            font-size: 16px;
            margin: 10px 0;
            color: #333333;
        }

        .card-item .btn {
            color: #ffffff;
            margin-top: 15px;
            padding: 10px 20px;
            border-radius: 5px;
            text-transform: uppercase;
        }

        .card-item .btn:hover {
            color: #ffffff;
        }

        media (max-width: 992px) {
            .card-item {
                flex: 1 1 calc(50% - 20px);
            }
        }

        media (max-width: 576px) {
            .card-item {
                flex: 1 1 100%;
            }
        }
    </style>
</head>

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <div class="container-fluid nav-bar bg-transparent">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
                <a href="/Home/HomePage" class="navbar-brand d-flex align-items-center text-center">
                    <div>
                        <img class="img-fluid" src="/img/pngwing.com.png" alt="" style="width: 70px; height: 70px;">
                    </div>
                    <pre> </pre>

                    <h1 class="	--bs-primary-bg-subtle ">ZAD</h1>
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto">
                        <a href="/Home/HomePage" class="nav-item nav-link active">Home</a>
                        <div class="nav-item dropdown">
                            <a href="/Users/GetAllAuctions" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Auctions</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a href="/Users/GetAllRealStateAuctions" class="dropdown-item">Real Estate</a>
                                <a href="/Users/GetAllCarsAuctions" class="dropdown-item">Vehicles</a>
                                <a href="/Users/GetAllOtherAuctions" class="dropdown-item">Others</a>
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
